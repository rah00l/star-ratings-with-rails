<style type="text/css">
	h2, h5, span {
		display: inline;
	}

</style>

<h1>Articles</h1>

<%= form_tag articles_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<br/>

<div id="facets">
  <h3>Published</h3>
  <ul>
    <% for row in @search.facet(:created_month).rows %>
      <li>
        <% if params[:month].blank? %>
          <%= link_to row.value, :month => row.value %> (<%= row.count %>)
        <% else %>
          <strong><%= row.value %></strong> (<%= link_to "remove", :month => nil %>)
        <% end %>
      </li>
    <% end %>
  </ul>
</div>


<div id="articles">

<% @articles.each do |article| %>
	<div>
    <h2 ><%= link_to article.name, article %></h2>&nbsp;&nbsp;&nbsp;&nbsp;<span class="comments">(<%= pluralize(article.comments.size, 'comment') %>)</span>
    <h5 ><%= link_to "Rate this:", article %></h5>
    </div>
  <div class="content"><%= simple_format(article.content) %></div>
<% end %>
</div>
<p><%= link_to "New Article", new_article_path %></p>
