<style type="text/css">
	h2, h5 {
		display: inline;
	}

</style>

<h1>Articles</h1>

<div id="articles">
<% @articles.each do |article| %>
	<div>
    <h2 ><%= link_to article.name, article %></h2>&nbsp;&nbsp;&nbsp;&nbsp;
    <h5 ><%= link_to "Rate this Article", article %></h5>
    </div>
  <div class="content"><%= simple_format(article.content) %></div>
<% end %>
</div>
<p><%= link_to "New Article", new_article_path %></p>
