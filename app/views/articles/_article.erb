<%# @articles.each do |article| %>
	<div>
    <h2 ><%= link_to article.name, article %></h2>&nbsp;&nbsp;&nbsp;&nbsp;<small><em><%= article.timestamp %></em></small> <span class="comments">(<%= pluralize(article.comments.size, 'comment') %>)</span>
    <h5 ><%= link_to "Rate this:", article %></h5>
    </div>
  <div class="content"><%= simple_format(article.content) %></div>
<p>Tags: <%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
<%# end %>