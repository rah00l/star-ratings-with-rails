<h1>Event</h1>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Starts at:</b>
  <%= @event.starts_at %>
</p>

<p>
  <b>Ends at:</b>
  <%= @event.ends_at %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>
<% if can? :update, @event %>
<%= link_to 'Edit', edit_event_path(@event) %> | <% end %>  
<%= link_to 'Back', events_path %>
