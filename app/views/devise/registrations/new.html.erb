<h2><b>Sign up</b></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
<%= devise_error_messages! %>

<div><%#= f.label :email %><br />
<%= f.email_field :email, :autofocus => true, placeholder: "Email", class: "check_email"%><span id="resultStatus"></span></div>

  <div><%#= f.label :password %><br />
    <%= f.password_field :password , placeholder: "Password"%></div>

    <div><%#= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %></div>
      
      <%= f.hidden_field :role_ids, :value => Role.find_by_name("Other").id %>

      <br/>

      <div><%= f.submit "Sign up" %></div>
      <% end %>

      <%= render "devise/shared/links" %>
