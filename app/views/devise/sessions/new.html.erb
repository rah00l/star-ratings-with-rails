
<body class="">
<div class="signin_container">
<h2 class="login_heading"><b>Sign in</b></h2>
<div class="form_container">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<%= link_to "login facebook", user_omniauth_authorize_path(:facebook), :class => "login_facebook", id: "facebook_sign_in" %>
				<%= image_tag ("/assets/or.png"), :class => "or_image" %>
  <%#= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, placeholder: "Email" ,  class: 'input_styling' %>

  <%#= f.label :password %>
  <%= f.password_field :password, placeholder: "Password" %>

<div class="remember_margin">
<div class="remember_me">
<div class="control-group">
  <% if devise_mapping.rememberable? -%>
  	<div class="controls">
    <%= f.check_box :remember_me %>Remember me
    </div>
  <% end -%>
  </div>
</div>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</body>
